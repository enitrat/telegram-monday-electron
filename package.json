{
  "name": "Gramday",
  "author": "Mathieu Saugier <msaug@protonmail.com>",
  "version": "1.1.2",
  "description": "Export your telegram chats to the CRM Monday",
  "main": "./.webpack/main",
  "engines": {
    "node": ">=16.0.0 <17"
  },
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "release": "electron-forge publish",
    "lint": "eslint . --ext js,ts",
    "test": "jest"
  },
  "keywords": [],
  "license": "MIT",
  "dependencies": {
    "@chakra-ui/icons": "^2.0.1",
    "@chakra-ui/react": "^2.1.2",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "babel-plugin-module-resolver": "^4.1.0",
    "css-loader": "^6.7.1",
    "discord.js": "git+https://github.com/msaug/discord.js",
    "dotenv": "^16.0.1",
    "electron-dl": "^3.3.1",
    "electron-fetch": "^1.7.4",
    "electron-icon-maker": "^0.0.5",
    "electron-log": "^4.4.8",
    "electron-store": "^8.0.1",
    "ffmpeg-static": "^5.0.0",
    "framer-motion": "^6",
    "limiter": "^2.1.0",
    "node-fetch": "^3.2.4",
    "node-fetch-commonjs": "^3.1.1",
    "papaparse": "^5.3.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-hot-loader": "^4.13.0",
    "react-icons": "^4.4.0",
    "react-notifications": "^1.7.3",
    "react-router-dom": "6",
    "react-scrollable-feed": "^1.3.1",
    "react-table": "^7.8.0",
    "styled-components": "5.3.0",
    "telegram": "2.5.2",
    "webpack": "^5.72.1",
    "whatwg-fetch": "^3.6.2",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@babel/core": "7.14.6",
    "@babel/plugin-transform-runtime": "7.14.5",
    "@babel/preset-env": "7.14.5",
    "@babel/preset-react": "7.14.5",
    "@babel/preset-typescript": "7.14.5",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-dmg": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@electron-forge/plugin-webpack": "6.0.0-beta.63",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@types/electron-devtools-installer": "2.2.0",
    "@types/jest": "26.0.23",
    "@types/react": "^18.0.11",
    "@types/react-dom": "^18.0.5",
    "@types/react-table": "^7.7.12",
    "@types/styled-components": "5.1.10",
    "@typescript-eslint/eslint-plugin": "4.27.0",
    "@typescript-eslint/parser": "4.27.0",
    "@vercel/webpack-asset-relocator-loader": "1.7.0",
    "babel-loader": "8.2.2",
    "cross-env": "7.0.3",
    "electron": "18.1.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-standard": "5.0.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.0.1",
    "jest": "27.0.4",
    "node-loader": "^2.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "2.3.1",
    "style-loader": "^3.0.0",
    "ts-jest": "27.0.3",
    "ts-loader": "^9.2.2",
    "typescript": "4.3.4",
    "wait-on": "5.3.0"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "Gramday",
        "executableName": "Gramday",
        "icon": "assets/icon",
        "extraResource": [
          "assets"
        ]
      },
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack/webpack.main.config.js",
            "renderer": {
              "config": "webpack/webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./public/index.html",
                  "js": "./src/index.tsx",
                  "name": "main_window",
                  "preload": {
                    "js": "./electron/bridge.ts"
                  }
                },
                {
                  "html": "./public/prompt_window.html",
                  "js": "./src/prompt/index.tsx",
                  "name": "prompt_window",
                  "preload": {
                    "js": "./electron/bridge.ts"
                  }
                }
              ]
            }
          }
        ]
      ],
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Gramday"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg"
        }
      ]
    }
  }
}
